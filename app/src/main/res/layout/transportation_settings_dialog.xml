<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="20dp">

    <TextView
        android:id="@+id/typeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/type_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Spinner
        android:id="@+id/transportation_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/search_transportation_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/typeText"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/typeText"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/modelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/model_title"
        app:layout_constraintLeft_toLeftOf="@+id/typeText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/typeText" />

    <EditText
        android:id="@+id/model_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:maxLines="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/modelText"
        app:layout_constraintLeft_toLeftOf="@+id/transportation_type_spinner"
        app:layout_constraintHorizontal_bias="0.222"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
